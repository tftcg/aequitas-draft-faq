{% extends "base.jinja2" %}

{% block title %}{{ faq_name }}{% endblock %}

{% block content %}
        <!--
        <img class="thumb" src="/card_images/{{ safe_name }}.jpg" width="20%" style="float: right"/>
        -->
        <div><a href="index.html">{{ parent_node.attrib['name'] }}</a></div>
        <h3 class="card_title">{{ faq_name }}</h3>
        <ol class="card_faq">

{% for entry in entries %}

    {% if 'xref' in entry[2].attrib %}
      {% set faq_node = f_get_xref(entry[2].attrib['xref']) %}
    {% else %}
      {% set faq_node = entry %}
    {% endif %}

    <li class="faq_entry">
      {% if faq_node[2].attrib['mode'] %}
          <!-- mode = {{ faq_node[2].attrib['mode'] }} -->
      {% endif %}
      <a name="{{ faq_node[3] }}__{{ faq_node[2].attrib['id'] }}"/>
      <div class="question">
        {{ f_clean_markup(faq_node[2].find('question').text) }}
        <span><a href="{{ faq_node[1] }}"><img src="/images/source-{{ f_source_image_name(faq_node[0]) }}.svg" title="{{ faq_node[0] }}"/></a></span>
        <a href="#{{ faq_node[3] }}__{{ faq_node[2].attrib['id'] }}"><img src="/images/permalink.svg"/></a>
      </div>
      <div class="answer">
        {{ f_clean_markup(faq_node[2].find('answer').text) }}
      </div>
    </li>
{% endfor %}

        </ol>
{% endblock %}
