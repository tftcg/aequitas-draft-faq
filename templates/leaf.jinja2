{% extends "base.jinja2" %}

{% block title %}{{ faq_name }}{% endblock %}

{% block social %}
  <meta property="og:type" content="website"/>
  <meta property="og:title" content="TFTCG FAQ"/>
  <meta property="og:description" content="{{pretty_path}} / {{ faq_name }} FAQ ({{ entries|length }})"/>
  <meta property="og:url" content="https://tftcg.info/{{ filename }}"/>
  {% if tag_node.attrib['wave_code'] %}
  <meta property="og:image" content="https://images.fortressmaximus.io/cards/{{ f_safe_name(tag_node.attrib['name']) }}-{{ tag_node.attrib['wave_code']}}{% if 'Character' in pretty_path %}-alt{% endif %}.jpg"/>
  <meta property="og:image:alt" content="The {{ faq_name }} card">
  {% endif %}
{% endblock %}

{% block content %}
        <div><a href="index.html">{{ parent_node.attrib['name'] }}</a></div>
        {% if tag_node.attrib['wave_code'] %}
          <a id="fort-max-link" href="https://fortressmaximus.io/card/{{ f_safe_name(tag_node.attrib['name']) }}-{{ tag_node.attrib['wave_code']}}"><img src="/images/FortMax-Logo.png"><span class="fortmaxtext"> View On FortressMaximus.io</span></a></a>
        {% endif %}
        <h3 class="card_title">{{ faq_name }}</h3>

        <ol class="card_faq">

{% for entry in entries %}

    {% if 'xref' in entry[2].attrib %}
      {% set faq_node = f_get_xref(entry[2].attrib['xref']) %}
    {% else %}
      {% set faq_node = entry %}
    {% endif %}

    <li id="{{ faq_node[3] }}__{{ faq_node[2].attrib['id'] }}" class="faq_entry">
      {% if faq_node[2].attrib['mode'] %}
          <!-- mode = {{ faq_node[2].attrib['mode'] }} -->
      {% endif %}
      <div class="question">
        <a name="{{ faq_node[3] }}__{{ faq_node[2].attrib['id'] }}"/>
        {{ f_prepare_text(faq_node[2].find('question')) }}
        <span><a href="{{ faq_node[1] }}"><img src="/images/source-{{ f_source_image_name(faq_node[0]) }}.svg" title="{{ faq_node[0] }}"/></a> <a href="#{{ faq_node[3] }}__{{ faq_node[2].attrib['id'] }}"><img src="/images/permalink.svg"/></a></span>
      </div>
      <div class="answer">
        {{ f_prepare_text(faq_node[2].find('answer')) }}
      </div>
    </li>
{% endfor %}

        </ol>
{% endblock %}
